{
  "dashboard": {
    "title": "Libvirt Monitoring POC - Prometheus",
    "tags": ["libvirt", "poc", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total de VMs",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "Prometheus"
            },
            "expr": "count(count by (vm_name) (vm_cpu_time_seconds))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Time por VM",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "Prometheus"
            },
            "expr": "vm_cpu_time_seconds",
            "refId": "A",
            "legendFormat": "{{vm_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            },
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 3,
        "title": "Uso de Mem√≥ria por VM",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "Prometheus"
            },
            "expr": "vm_memory_kb / 1048576",
            "refId": "A",
            "legendFormat": "{{vm_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            },
            "color": {
              "mode": "palette-classic"
            },
            "unit": "decgbytes"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 4,
        "title": "Tabela de VMs",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "Prometheus"
            },
            "expr": "vm_cpu_time_seconds",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "vm_name": "VM Name",
                "vm_uuid": "UUID",
                "Value": "CPU Time (s)"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": []
        }
      }
    ]
  }
}
